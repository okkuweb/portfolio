{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Oskari's portfolio site",
  "main": "index.html",
  "repository": "https://github.com/okkuweb/portfolio.git",
  "scripts": {
    "clean": "rimraf dist",
    "html": "cp src/*.php dist/",
    "css": "postcss --config postcss.json src/css/style.css > dist/css/style.css",
    "js": "webpack",
    "start": "php -S localhost:8000 -t dist/ & browser-sync start --proxy 'localhost:8000'",
    "watch": "watch 'npm run build' src/",
    "build": "npm run html && npm run css && npm run js"
  },
  "keywords": [
    "website",
    "web",
    "html",
    "css",
    "portfolio",
    "javascript"
  ],
  "author": "Oskari Saari",
  "license": "ISC",
  "devDependencies": {
    "@types/domready": "0.0.29",
    "@types/jquery": "^2.0.32",
    "autoprefixer": "^6.5.0",
    "browser-sync": "^2.17.0",
    "cssnano": "^3.7.5",
    "lost": "^7.1.0",
    "postcss-cli": "^2.6.0",
    "postcss-import": "^8.1.2",
    "postcss-nested": "^1.0.0",
    "postcss-simple-vars": "^3.0.0",
    "rimraf": "^2.5.4",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "watch": "^0.19.2",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
