{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Oskari's portfolio site",
  "main": "index.html",
  "scripts": {
    "clean": "rm -r -f ./dist && cp -r -f ./src ./dist",
    "html": "cp src/*.php dist/",
    "css": "node-sass ./src/css/style.scss | cleancss > ./dist/css/style.css",
    "js": "webpack",
    "server": "php -S localhost:8000 -t dist/ & browser-sync start --proxy 'localhost:8000'",
    "build": "npm run clean && npm run css && npm run js"
  },
  "keywords": [
    "website",
    "web",
    "html",
    "css",
    "portfolio",
    "javascript"
  ],
  "author": "Oskari Saari",
  "license": "ISC",
  "devDependencies": {
    "@types/domready": "0.0.29",
    "@types/jquery": "^2.0.32",
    "browser-sync": "^2.17.0",
    "clean-css": "^3.4.19",
    "node-sass": "^3.10.0",
    "ts-loader": "^0.8.2",
    "typescript": "^2.0.3",
    "webpack": "^1.13.2"
  },
  "dependencies": {
    "jquery": "^3.1.1"
  }
}
